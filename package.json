{
  "name": "asistencias-qr",
  "version": "1.0.0",
  "description": "Sistema Integral de Gestión Institucional - Control de asistencias, gestión académica, reportes y documentos oficiales para instituciones educativas",
  "main": "backend/server.js",
  "type": "commonjs",
  "scripts": {
    "start": "node scripts/start-dynamic.js backend/server.js",
    "dev": "node scripts/start-dynamic.js scripts/start-dev.js",
    "dev:old": "npm run dev:web",
    "dev:web": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:nodemon": "npx nodemon backend/server.js",
    "dev:backend": "node scripts/start-dynamic.js backend/server.js",
    "dev:frontend": "cd frontend && npm run dev",
    "build:frontend": "cd frontend && npm run build",
    "postinstall": "npx prisma generate",
    "pretest": "node setup-test-db.js",
    "test": "cross-env NODE_ENV=test jest --coverage --verbose",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "test:integration": "cross-env NODE_ENV=test jest backend/__tests__/asistencias-integration.test.js",
    "seed": "node backend/prisma/seed.js",
    "prisma:studio": "npx prisma studio",
    "db:reset": "node backend/scripts/reset-db.js",
    "prisma:push": "npx prisma db push",
    "prisma:reset": "npx prisma migrate reset --force",
    "utils": "node scripts/utils.js",
    "admin": "node scripts/crear-admin.js",
    "update": "node scripts/update-system.js",
    "rollback": "node scripts/rollback-version.js",
    "update:safe": "npm update express-validator && cd frontend && npm update @eslint/js @vitejs/plugin-react autoprefixer eslint vite",
    "lint": "eslint backend --ext .js",
    "lint:fix": "eslint backend --ext .js --fix",
    "validate:emojis": "node scripts/validate-no-emojis.js",
    "validate:all": "npm run lint && npm run validate:emojis",
    "electron": "node scripts/start-electron.js",
    "electron:dev": "electron electron/main.js",
    "dist": "npm run build:frontend && electron-builder",
    "dist:win": "npm run build:frontend && electron-builder --win",
    "dist:linux": "npm run build:frontend && electron-builder --linux",
    "dist:mac": "npm run build:frontend && electron-builder --mac"
  },
  "keywords": [
    "asistencias",
    "qr",
    "colegio",
    "control"
  ],
  "author": "Kevin - HikariOpen",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "archiver": "^7.0.1",
    "astral-regex": "^2.0.0",
    "axios": "^1.13.1",
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "express-validator": "^7.3.0",
    "extract-zip": "^2.0.1",
    "fs-extra": "^11.1.1",
    "glob": "^13.0.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "pdfkit": "^0.15.0",
    "pino": "^10.1.0",
    "pino-http": "^11.0.0",
    "pino-pretty": "^13.1.2",
    "qrcode": "^1.5.3",
    "rimraf": "^6.1.2",
    "sharp": "^0.32.6",
    "streamifier": "^0.1.1",
    "uuid": "^13.0.0"
  },
  "build": {
    "appId": "com.hikari.asistencias",
    "productName": "Sistema de Registro Institucional",
    "directories": {
      "output": "release"
    },
    "files": [
      "electron/**/*",
      "frontend/dist/**/*",
      "backend/**/*",
      "package.json",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "frontend/public/logo.png"
    },
    "linux": {
      "target": "AppImage",
      "category": "Education"
    },
    "mac": {
      "target": "dmg"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    },
    "asar": false
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.2.7",
    "electron-builder": "^24.9.1",
    "jest": "^30.2.0",
    "jimp": "^1.6.0",
    "jsqr": "^1.4.0",
    "prisma": "^5.22.0",
    "supertest": "^7.1.4",
    "wait-on": "^7.2.0"
  }
}
